<?xml version='1.0' encoding='UTF-8' standalone='yes'?> 
<bamboo-rally-notifier>
   <service>
      <!-- INFO|DEBUG|WARN|ERROR|FATAL -->
      <log-level>
          INFO 
      </log-level>
      <!-- path to filename -->
      <log-file>
          sva-sample.log 
      </log-file>
      <!-- in seconds -->
      <interval>
          300 
      </interval>
   </service>
   <rally>
      <!-- https://rally1.rallydev.com/slm -->
      <server>
          https://rally1.rallydev.com/slm 
      </server>
      <!-- paul@acme.com -->
      <user>
          barry
      </user>
      <password>
          
      </password>
   </rally>
   <bamboo>
      <!-- http://localhost:8085/rest/api/latest/ -->
      <url>
          http://<host or ip>:<port>/rest/api/latest/ 
      </url>
      <user>
          username
      </user>
      <password>
          password
      </password>
   </bamboo>
   <projects>
   	  <!-- setup a project element for each bamboo project -->
      <project>
         <bamboo-project>
             PROJKEY 
         </bamboo-project>
         <bamboo-plan>
             PLANKEY
         </bamboo-plan>
         <rally-workspace>
             Workspace Name
         </rally-workspace>
         <rally-project>
             Project Name
         </rally-project>
         <last-build>
            1
         </last-build>
      </project>
   </projects>
</bamboo-rally-notifier>
